CompileFlags:
  Add:
    - -Wall
    - -Wextra
    - -Wpedantic
    - -Wshadow
    - -Wnon-virtual-dtor
    - -Wcast-align
    - -Wunused
    - -Woverloaded-virtual
    - -Wconversion
    - -Wnull-dereference
    - -Wdouble-promotion
    - -Wformat=2
    # Since you're using C++20
    - -std=c++20
  Remove:
    - -Werror
  # This tells clangd to look for compile_commands.json in the build folder
  # You won't need the symlink (ln -s) if this is set correctly.
  CompilationDatabase: build

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict

Completion:
  AllScopes: Yes
  ArgumentLists: FullPlaceholders
  # "IWYU" is great but can be aggressive. "Never" if you want to insert manually.
  HeaderInsertion: IWYU 
  CodePatterns: All

Index:
  Background: Build
