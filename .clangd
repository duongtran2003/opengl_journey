CompileFlags:
  Add:
    - -Wall
    - -Wextra
    - -Wpedantic
    - -std=c++20
  Remove:
    - -Werror
  CompilationDatabase: build

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict

Completion:
  AllScopes: Yes
  ArgumentLists: FullPlaceholders
  HeaderInsertion: IWYU
  CodePatterns: All
  MacroFilter: ExactPrefix

Index:
  Background: Build
